# ============================================
# METAMEN100 - Environment Variables Template
# ============================================

# ============================================
# SUPABASE
# ============================================
# URL del proyecto Supabase (Settings > API)
NEXT_PUBLIC_SUPABASE_URL=

# Anon Key (pública, safe para frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service Role Key (NUNCA exponer en frontend)
# Se requiere para scripts de administración y bypass RLS
SUPABASE_SERVICE_ROLE_KEY=

# Database URL (para migraciones/Prisma/Drizzle)
# postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=

# ============================================
# STRIPE
# ============================================
# Publishable Key (pública, safe para frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Secret Key (NUNCA exponer en frontend)
STRIPE_SECRET_KEY=

# Webhook Signing Secret (se obtiene al configurar el webhook)
STRIPE_WEBHOOK_SECRET=

# Price IDs (Se obtienen al crear productos en Stripe)
# Ejemplo: price_1P...
STRIPE_PRICE_MONTHLY=
STRIPE_PRICE_YEARLY=

# ============================================
# REPLICATE (IA Generativa)
# ============================================
# API Token para generar imágenes
REPLICATE_API_TOKEN=

# ============================================
# APP CONFIG
# ============================================
# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Versión de la app
NEXT_PUBLIC_APP_VERSION=0.1.0

# Entorno (development, test, production)
NODE_ENV=development

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
